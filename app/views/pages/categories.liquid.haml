{% extends 'index' %}
{% block header %}
%header.Header.CategoryHeader
  %h1.Header-title.CategoryHeader-title
    %a.Header-titleText{:href => "/"}
      {{ 'Galery' | translate }}
  {% include 'searchbar'  with modifier: "light"  %}
  {% include 'navigation' %}
{% endblock %}
{% block main %}
.Row.u-mt--l
  %ul.MediaItems
    {% for category in contents.categories %}
    {% include 'media-item-categories' , with modifier: "1", smallModifier: "4" %}
    {% endfor %}

{% endblock %}
